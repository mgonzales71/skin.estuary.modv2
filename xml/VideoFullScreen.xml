<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol></defaultcontrol>
	<onload>ClearProperty(ThumbSplit1,Home)</onload>
    <onload>ClearProperty(ThumbSplit2,Home)</onload>
    <onload condition="String.Contains(Player.Art(thumb),ytimg)">RunScript(script.skin.helper.service,action=stripstring,splitchar=/vi/,string=$INFO[Player.Art(thumb)],output=ThumbSplit1,index=1)</onload>
    <onload condition="String.Contains(Player.Art(thumb),ytimg)">AlarmClock(setfo,SetFocus(9606),00:01,silent)</onload>
	<controls>
		<control type="button" id="9606">
          <onfocus>RunScript(script.skin.helper.service,action=stripstring,splitchar=/,string=$INFO[Window(Home).Property(ThumbSplit1)],output=ThumbSplit2,index=0)</onfocus>
          <width>1</width>
          <height>1</height>
          <left>-1000</left>
        </control>
		<control type="group" id="0">
			<control type="label" id="10">
				<left>45</left>
				<top>15</top>
				<width>1770</width>
				<height>100</height>
				<label/>
				<font>font12</font>
				<shadowcolor>black</shadowcolor>
				<visible>!Skin.HasSetting(OSDLargeSeekingLabel)</visible>
			</control>
			<control type="label" id="11">
				<left>45</left>
				<top>45</top>
				<width>1770</width>
				<height>100</height>
				<label/>
				<font>font12</font>
				<shadowcolor>black</shadowcolor>
			</control>
			<control type="label" id="12">
				<left>45</left>
				<top>75</top>
				<width>1770</width>
				<height>100</height>
				<label/>
				<font>font12</font>
				<shadowcolor>black</shadowcolor>
			</control>
			<control type="group" id="0">
				<control type="label" id="10">
					<posx>0</posx>
					<top>0</top>
					<height>100%</height>
					<width>100%</width>
					<align>center</align>
					<aligny>center</aligny>
					<font>font_musicvis_bigger</font>
					<textcolor>88ffffff</textcolor>
					<shadowcolor>aa000000</shadowcolor>
					<aligny>center</aligny>
					<align>center</align>
					<label>-</label>
					<visible>Skin.HasSetting(OSDLargeSeekingLabel)</visible>
				</control>
			</control>
		</control>
		<control type="group" id="1">
			<depth>DepthOSD+</depth>
			<visible>[Player.Caching + Integer.IsGreater(Player.CacheLevel,0)] + ![Player.Seeking | Player.DisplayAfterSeek | [Player.Paused + !Skin.HasSetting(Hide_OSDInfo)] | Player.Forwarding | Player.Rewinding | Player.ShowInfo | Window.IsActive(fullscreeninfo) | Window.IsActive(videoosd) | Window.IsActive(musicosd) | Window.IsActive(playerprocessinfo) | !String.IsEmpty(Player.SeekNumeric) | !String.IsEmpty(PVR.ChannelNumberInput)]</visible>
			<animation effect="fade" delay="300" time="200">Visible</animation>
			<animation effect="fade" delay="200" time="150">Hidden</animation>
			<centerleft>50%</centerleft>
            <centertop>50%</centertop>
            <width>350</width>
            <height>70</height>
			<control type="image" id="1">
                <centerleft>50%</centerleft>
                <centertop>50%</centertop>
                <width>350</width>
                <height>70</height>
                <texture>dialogs/back.png</texture>
            </control>
 			<control type="progress" id="1">
 			    <centerleft>50%</centerleft>
                <top>39</top>
                <width>320</width>
                <height>16</height>
                <info>Player.CacheLevel</info>
            </control>
            <control type="label" id="1">
 				<label>$INFO[Player.CacheLevel]%</label>
 				<centerleft>50%</centerleft>
 				<top>13</top>
 				<width>320</width>
 				<height>20</height>
 				<aligny>center</aligny>
 				<align>right</align>
 				<font>font10</font>
 			</control>        
 			<control type="label" id="2">
 				<label>$LOCALIZE[15107]</label>
 				<centerleft>50%</centerleft>
 				<top>13</top>
 				<width>320</width>
  				<height>20</height>
  				<aligny>center</aligny>
  				<align>left</align>
  				<font>font10</font>
  			</control>
		</control>
	<!-- Jump to Time Code Overlay -->
		<control type="group" id="2">
			<visible>!String.IsEmpty(Player.SeekNumeric) + !Window.IsVisible(VideoOSD) + Skin.HasSetting(OSDLargeSeekingLabel)</visible>
			<animation type="Visible" condition="!Window.IsVisible(SeekBar)">
				<effect type="zoom" start="90" end="100" center="auto" tween="back" easing="out" time="200"/>
				<effect type="fade" start="0" end="100" time="200"/>
			</animation>
			<control type="label" id="1">
				<posx>0</posx>
				<top>0</top>
				<height>100%</height>
				<width>100%</width>
				<align>center</align>
				<aligny>center</aligny>
				<label>$INFO[Player.SeekNumeric(hh:mm:ss)]</label>
				<font>font_musicvis_bigger</font>
                <textcolor>88ffffff</textcolor>
				<shadowcolor>aa000000</shadowcolor>
				<aligny>center</aligny>
				<align>center</align>
			</control>
		</control>
	</controls>
</window>
